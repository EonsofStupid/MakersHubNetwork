{
  "compilerOptions": {
    "target": "ES2022",                          // Already correct for Error.cause
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],    // Already includes ES2022 for Error.cause
    "module": "ESNext",

    /* Compiler behavior */
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",

    /* Linting & Safety */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,

    /* Module resolution */
    "moduleResolution": "bundler",               // Correct for Vite

    /* Paths & aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],                          // App root
      "@admin/*": ["src/admin/*"],               // Admin features
      "@chat/*": ["src/chat/*"],                 // Chat system
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@lib/*": ["src/lib/*"],
      "@state/*": ["src/state/*"],
      "@theme/*": ["src/theme/*"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/shared/utils/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
