{
  "compilerOptions": {
    "target": "ES2022",                          // ✅ Required for Error.cause
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],    // ✅ Modern API + browser + iterable support
    "module": "ESNext",

    /* Compiler behavior */
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",

    /* Linting & Safety */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,

    /* Module resolution */
    "moduleResolution": "bundler",               // ✅ Required for Vite + Next + modern stacks

    /* Paths & aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],                          // ✅ App root
      "@admin/*": ["src/admin/*"],               // ✅ Admin features
      "@chat/*": ["src/chat/*"],                 // ✅ Chat system
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
